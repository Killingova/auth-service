{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Auth-Service (Fastify v5, ESM/NodeNext, Redis, Prisma)",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx src/server.ts",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "seed:demo": "node dist/scripts/seed-demo-users.js --verbose",
    "housekeeping": "tsx src/scripts/run-housekeeping.ts",
    "test": "npm run test:unit",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:coverage": "vitest run --config vitest.e2e.config.ts --coverage"
  },
  "dependencies": {
    "@fastify/cors": "^10.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.4",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.1.0",
    "ioredis": "^5.8.2",
    "jose": "^6.1.0",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.15.6",
    "@vitest/coverage-v8": "^4.0.14",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
